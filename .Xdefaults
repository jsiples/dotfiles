! General URxvt preferences
URxvt*loginShell:true
URxvt*scrollBar:false
URxvt*scrollBar_right:true
URxvt*transpscrollbar:true
URxvt*saveLines:32767
URxvt*urgentOnBell: True
URxvt*visualBell: False
URxvt*skipScroll: True
URxvt*cursorUnderline: True
URxvt*depth: 32

! Extensions
URxvt*perl-lib:        /usr/lib/urxvt/perl/
URxvt*perl-ext-common: default,clipboard,url-select,keyboard-select,matcher,searchable-scrollback,resize-font
URxvt*urlLauncher:     /usr/bin/firefox
URxvt*matcher.button:  1

! URL Select Extension
URxvt.url-select.launcher:  google-chrome-stable
URxvt.url-select.underline: true
URxvt.keysym.M-u: perl:url-select:select_next

! Fonts
URxvt*font:-*-terminus-*-*-*-*-*-*-*-*-*-*-*-*
URxvt*boldFont:-*-terminus-*-*-*-*-*-*-*-*-*-*-*-*

! terminal colors ------------------------------------------------------------

!*background: #000000 + transparency
!*foreground: #FFFFFF
URxvt*background: [95]#000000
URxvt*foreground: #FFFFFF

! Black + DarkGrey
*color0:  #000000
*color8:  #686868
! DarkRed + Red
*color1:  #FC3F43
*color9:  #FF6F6B
! DarkGreen + Green
*color2:  #00C120
*color10: #67F86F
! DarkYellow + Yellow
*color3:  #C7C327
*color11: #FFFA72
! DarkBlue + Blue
*color4:  #0E90FC
*color12: #56D2FD
! DarkMangenta + Mangenta
*color5:  #C839C5
*color13: #FF7CFD
!DarkCyan + Cyan
*color6:  #01C5C6
*color14: #68FDFE
! LightGrey + White
*color7:  #C7C7C7
*color15: #FFFFFF
